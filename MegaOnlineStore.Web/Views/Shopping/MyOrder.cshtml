@model MegaOnlineStore.Web.Models.FinalCartModel

@{
    ViewBag.Title = "MyOrder";
}

<h2>Cart</h2>

<p>
    @Html.ActionLink("Continue Shopping", "List", "Products") |
    @Html.ActionLink("Check Out", "", "")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.cartViewModel[0].Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cartViewModel[0].Catagory)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cartViewModel[0].Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cartViewModel[0].Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cartViewModel[0].Amount)
        </th>
    </tr>

    @foreach (var item in Model.cartViewModel)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Catagory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { id = item.ProductID })
                
            </td>
        </tr>
    }

</table>


<span>
    Total Amount : @Model.TotalAmount
    <br>
    Total Item : @Model.TotalItem
</span>

